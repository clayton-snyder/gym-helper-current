<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musclegetter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/weights_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/weights_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExerciseListActivity"
            android:label="List of Exercises" />
        <activity
            android:name=".ExerciseDetailActivity"
            android:label="Exercise Details" />
        <activity
            android:name=".CategoryListActivity"
            android:label="Categories" />
        <activity
            android:name=".RoutineListActivity"
            android:label="Routines" />
        <activity
            android:name=".RoutineDisplayActivity"
            android:label="Routine Detail" />
        <activity
            android:name=".AddExerciseActivity"
            android:label="Add New Exercise" />
        <activity
            android:name=".AddRoutineActivity"
            android:label="Add New Routine" />
    </application>

</manifest>